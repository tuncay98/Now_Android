<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2970ff" />
            <gradient android:angle="-90" android:startColor="#3c83ff" android:endColor="#1e74ff"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2289ff" />
            <solid android:color="#0066ff"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3060ff" />
            <gradient android:angle="-90" android:startColor="#169eff" android:endColor="#4a5dff" />
        </shape>
    </item>
</selector>